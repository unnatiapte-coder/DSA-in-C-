#include<stdio.h>
int main()
{
int arr[10],i,j,ch,temp,n,pass=0, comp=0, swap=0,shift=0,k,min,pos;
do
{
printf("\nMenu:\n 1.Bubble sort \n 2. Selection sort \n 3.

Insertion sort");

printf("\n Enter your choice=");
scanf("%d",&ch);
switch(ch)
{
case 1: pass=0; comp=0; swap=0;
printf("\n Enter total number of elements in the array:");
scanf("%d",&n);
printf("\n Enter elements in the array:\n");
for(i=0;i<n;i++)
scanf("%d",&arr[i]);
printf("\n Bubble sort \n");
for(i=0;i<n-1;i++) //no. of passes
{ pass++;
printf("\n Pass=%d\n",i+1);
for(j=0;j<n-1-i;j++) //no. of comparisons
{ comp++;
printf("\n");
if(arr[j]>arr[j+1])
{

temp=arr[j]; //swaps
arr[j]=arr[j+1];
arr[j+1]=temp;
swap++;
}
for(k=0;k<n;k++)
printf("%d\t",arr[k]);

}
}
printf("\n Sorted array is=\n");
for(i=0;i<n;i++)
printf("%d\t",arr[i]);
printf("\n No. of passes=%d\n No. of comparisons=%d\n

No. of swaps=%d",pass,comp,swap);

break;
case 2: pass=0; comp=0; swap=0;
printf("\n Enter total number of elements in the array:");
scanf("%d",&n);
printf("\n Enter elements in the array:\n");
for(i=0;i<n;i++)
scanf("%d",&arr[i]);
printf("\n Selection sort");
for(i=0;i<n-1;i++) //no. of passes
{ pass++;
min=arr[i];
pos=i;
for(j=i+1;j<n;j++) //no. of comparisons
{ comp++;
if(arr[j]<min)
{
min=arr[j];
pos=j;
}
}
if(i!=pos)

{
temp=arr[pos]; //swaps
arr[pos]=arr[i];
arr[i]=temp;
swap++;
}

}
printf("\n Sorted array is=\n");
for(i=0;i<n;i++)
printf("%d\t",arr[i]);
printf("\n No. of passes=%d\n No. of comparisons=%d\n

No. of swaps=%d",pass,comp,swap);

break;
case 3: pass=0; comp=0; swap=0;
printf("\n Enter total number of elements in the array:");
scanf("%d",&n);
printf("\n Enter elements in the array:\n");
for(i=0;i<n;i++)
scanf("%d",&arr[i]);
printf("\n Insertion sort");
for(i=0;i<n;i++) //no. of passes
{ pass++;
temp=arr[i];
for(j=i-1;j>=0;j--) //no. of comparisons
{ comp++;
if(arr[j]>temp)
{
arr[j+1]=arr[j]; //shift

shift++;
}
else

break;

}
arr[j+1]=temp; //Insert
}

printf("\n Sorted array is=\n");
for(i=0;i<n;i++)
printf("%d\t",arr[i]);
printf("\n No. of passes=%d\n No. of comparisons=%d\n

No. of shifts=%d",pass,comp,shift);

break;
}
}
while(ch<4);
return 0;
}
