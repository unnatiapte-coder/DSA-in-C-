#include<stdio.h>
int main()
{
int i,j,n,arr[20],key,ch,flag=0,min,max,mid,temp,comp=0;
do
{
printf("\n Enter your choice 1.Linear Search \n2.Binary Search");
printf("\n Enter your choice=");
scanf("%d",&ch);
switch(ch)
{
case 1:
printf("\n Enter size of your array=");
scanf("%d",&n);
printf("\n Enter the elements of the array=\n");
for(i=0;i<n;i++)
scanf("%d",&arr[i]);
printf("\n Enter the element to be searched:");
scanf("%d",&key);
for(i=0;i<n;i++)
{ comp++;
if(key==arr[i])
{
flag=1;
break;
}
}
{
if(flag==1)

printf("\n Element searched is found at position %d",i+1);
else
printf("\n Element searched is not found");

}
printf("\n");

printf("No. of comparisons = \t %d ",comp);

break;
case 2:
printf("\n Enter size of your array=");
scanf("%d",&n);
printf("\n Enter the elements of the array=\n");
for(i=0;i<n;i++)
scanf("%d",&arr[i]);
printf("\n Bubble sort \n");
for(i=0;i<n-1;i++)
{
for(j=0;j<n-1-i;j++)
{
if(arr[j]>arr[j+1])
{
temp=arr[j];
arr[j]=arr[j+1];
arr[j+1]=temp;
}
}
}
printf("\n Sorted array is=\n");
for(i=0;i<n;i++)
printf("%d\t",arr[i]);
printf("\n Enter element ot be searched=");

scanf("%d",&key);
min=0;
max=n-1;
while(min<=max)
{ comp++;
mid=(min+max)/2;
if(key==arr[mid])
{
flag=1;
break;
}
else if(key>arr[mid])

min=mid+1;
else
max=mid-1;

}
if(flag==1)
printf("\n Element is found at position %d",mid+1);
else
printf("\n Element searched not found");
printf("\n");

printf("No. of comparisons = \t %d ",comp);
break;
}
}
while(ch<3);
return 0;
}
